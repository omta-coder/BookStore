<%- include('header')%>
<%- include('nav')%>

<form action="/update/<%= index%>" method="post">
    <h1>Update Page</h1>
    <br>
    <input disabled value="<%= books.id%>" type="text" name="id" placeholder="ID">
    <br>
    <input value="<%= books.image%>" type="url" name="Image Link" placeholder="Image">
    <br>
    <input value="<%= books.name%>" type="text" name="name" placeholder="Name">
    <br>
    <input value="<%= books.author%>" type="text" name="author" placeholder="Author">
    <br>
    <textarea  name="description" placeholder="Write Description"><%= books.description%></textarea>
    <br>
    <input value="<%= books.page%>" type="number" name="page" placeholder="Pages">
    <br>
    <input value="<%= books.prize%>" type="number" name="prize" placeholder="Prize">
    <br>
    <input value="<%= books.year%>" type="number" name="year" placeholder="Year">
    <br>
    <button>Update</button>
</form>

<%- include('footer')%>